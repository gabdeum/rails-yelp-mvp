<div class="container mt-4">
  <h1><%= @restaurant.name %></h1>
  <h2><%= @restaurant.category %></h2>
  <br>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <%= link_to 'Back to restaurants', restaurants_path %>
  <hr>
  <h3>Reviews (<%= @reviews.length %>) <%= link_to new_restaurant_review_path(@restaurant) do %><i class="fa-solid fa-plus"></i><% end %></h2>
  <% @reviews.each do |review| %>
    <p><%= review.rating %>/5 - <%= review.content %></p>
  <% end %>
</div>
